{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build haxe",
            "type": "shell",
            "command": "haxe build.hxml",
            "problemMatcher": [
                "$haxe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run haxe",
            "type": "shell",
            "command": "haxe run.hxml",
            "problemMatcher": [
                "$haxe"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}